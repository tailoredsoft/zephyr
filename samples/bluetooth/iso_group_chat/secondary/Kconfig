source "Kconfig.zephyr"

mainmenu "Bluetooth: GroupChat Secondary"

source "samples/bluetooth/iso_group_chat/common/Kconfig"

config ISO_BLINK_LED0
	bool "Blink led0"
	depends on $(dt_alias_enabled,led0)
	select GPIO
	default y

config BT_ISO_GROUPCHAT_SECONDARY
    bool "Enable code specific to the groupchat secondary device"
    default n
	help
	  When enabled, additional features and modifications will be compiled
	  into the project. This option can be used to include or exclude code
	  blocks guarded by `#ifdef CONFIG_BT_ISO_GROUPCHAT_SECONDARY` in shared .c
	  and .h files.

